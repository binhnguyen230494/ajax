@{
    ViewBag.Title = "Home Page";
}
@section scripts{
    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/plugins/JavaScript.js"></script>
    <script src="~/Scripts/controller/home.js"></script>
    }
<div class="row">
    <div class="col-md-12">
        <button id="btnAddNew" class="btn btn-success">Add binh</button>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Name</td>
                    <td>Salary</td>
                    <td>Status</td>

                </tr>
            </thead>
            <tbody id="tbData"></tbody>
        </table>
        <div id="pagination"></div>
        <script id="data-template" type="x-tmpl-mustache">
            <tr>
                <td>{{ID}}</td>
                <td>{{Name}}</td>
                <td><input type="number" class="txtsalary" data-id="{{ID}}" value="{{Salary}}" /></td>
                <td>{{{Status}}}</td>

            </tr>
        </script>
    </div>
</div>
<div class="modal fade" id="modalAddUpdate" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add/Update Employee</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="frmSaveData">
                    <div class="form-group">
                        <label for="txtName">Name:</label>
                        <input type="text" class="form-control" name="txtName" id="txtName">
                        <input type="hidden" id="hidID" value="0" />
                    </div>
                    <div class="form-group">
                        <label for="txtsalary">Salary:</label>
                        <input type="text" class="form-control" name="txtsalary" id="txtsalary">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" id="ckStatus">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>