@{
    ViewBag.Title = "Home Page";
}
@section scripts{
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/plugins/JavaScript.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/controller/home.js"></script>
    }
<br/>

<div class="row">
    <div class="col-md-12">
        <div class="col-md-11">
            <div class="col-md-4">
                <input type="text" class="form-control" id="txtNameS" placeholder="Type name" />
            </div>
            <div class="col-md-4">
                <select class="form-control" id="ddlStatusS">
                    <option value="">All</option>
                    <option value="true">Active</option>
                    <option value="false">Locked</option>
                </select>
            </div>
            <div class="col-md-4">
                <button class="btn btn-primary" id="btnSearch">Search</button>
                <button class="btn btn-default" id="btnReset">Reset</button>

            </div>
        </div>
        <div class="col-md-1">
            <button id="btnAddNew" class="btn btn-success pull-right">Add binh</button>
        </div>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Name</td>
                    <td>Salary</td>
                    <td>Status</td>
                    <td>#</td>
                </tr>
            </thead>
            <tbody id="tbData"></tbody>
        </table>
        <div id="pagination"></div>
        <script id="data-template" type="x-tmpl-mustache">
            <tr>
                <td>{{ID}}</td>
                <td>{{Name}}</td>
                <td><input type="number" class="txtsalary" data-id="{{ID}}" value="{{Salary}}" /></td>
                <td>{{{Status}}}</td>
                <td>
                    <button class="btn btn-primary btn-edit" data-id="{{ID}}">Edit</button>
                    <button class="btn btn-danger btn-delete" data-id="{{ID}}">Delete</button>
                </td>

            </tr>
        </script>
    </div>
</div>
@RenderPage("AddUpdateModel.cshtml")